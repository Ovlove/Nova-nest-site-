---
import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout>
  <h2 class="text-2xl font-semibold mb-4">Contact Us</h2>
  <form class="space-y-4">
    <input type="text" name="name" placeholder="Your name" class="block w-full border p-2">
    <input type="email" name="email" placeholder="Your email" class="block w-full border p-2">
    <textarea name="message" rows="4" placeholder="Message" class="block w-full border p-2"></textarea>
    <button type="submit" class="bg-blue-500 text-white px-4 py-2">Send</button>
  </form>
</BaseLayout>