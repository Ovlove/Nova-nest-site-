---
// src/layouts/BaseLayout.astro
const { title = 'NovaNest', description = '' } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body class="bg-white text-gray-800 font-sans">
    <header class="p-4 shadow-md text-center">
      <h1 class="text-2xl font-bold">NovaNest</h1>
      <p class="text-sm text-gray-600">Explore. Learn. Earn.</p>
    </header>

    <slot />

    <footer class="mt-16 p-4 text-center text-sm text-gray-500 border-t">
      &copy; {new Date().getFullYear()} NovaNest. All rights reserved.
    </footer>
  </body>
</html>
