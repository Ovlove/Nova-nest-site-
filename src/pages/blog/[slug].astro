---
// src/pages/blog/[slug].astro
import Layout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const { slug } = Astro.params;
const allPosts = await getCollection('blog');
const post = allPosts.find((p) => p.slug === slug);

if (!post) {
  throw new Error(`Post not found for slug: ${slug}`);
}

const { Content } = await post.render();
const { data } = post;
---

<Layout title={`NovaNest | ${data.title}`} description={data.description}>
  <main class="px-4 md:px-8 lg:px-16 py-12 max-w-3xl mx-auto space-y-8">
    <article class="space-y-4">
      <h1 class="text-4xl font-bold text-gray-800">{data.title}</h1>
      <p class="text-sm text-gray-500">{new Date(data.pubDate).toDateString()}</p>

      <Content class="prose prose-gray max-w-none" />
    </article>
  </main>
</Layout>
