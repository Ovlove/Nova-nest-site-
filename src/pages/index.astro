---
// src/pages/index.astro
import Layout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog');
const featured = allPosts.slice(0, 3);
---

<Layout title="NovaNest | Home" description="Explore digital income, tech tools, and modern life skills.">
  <main class="px-4 md:px-8 lg:px-16 py-12 space-y-16">
    <section class="text-center space-y-4">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-800">Welcome to NovaNest</h1>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Your digital hub for tech insights, income strategies, and real-world tools.
      </p>
    </section>

    <section>
      <h2 class="text-2xl font-semibold mb-6 text-gray-800">Featured Posts</h2>
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        {featured.map(post => (
          <a href={`/blog/${post.slug}/`} class="block p-4 border rounded-2xl shadow hover:shadow-lg transition">
            <h3 class="text-xl font-bold text-gray-800 mb-2">{post.data.title}</h3>
            <p class="text-sm text-gray-600">{post.data.description}</p>
            <p class="mt-2 text-xs text-gray-400">{new Date(post.data.pubDate).toDateString()}</p>
          </a>
        ))}
      </div>
    </section>

    <section>
      <h2 class="text-2xl font-semibold mb-4 text-gray-800">Recent Articles</h2>
      <ul class="space-y-4">
        {allPosts.slice(3, 8).map(post => (
          <li>
            <a href={`/blog/${post.slug}/`} class="text-lg text-blue-600 hover:underline">{post.data.title}</a>
            <p class="text-sm text-gray-500">{post.data.description}</p>
          </li>
        ))}
      </ul>
    </section>
  </main>
</Layout>
