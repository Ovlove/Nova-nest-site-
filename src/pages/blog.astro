---
import { getCollection } from 'astro:content';
const posts = await getCollection('blog');
---

<h1 class="text-3xl font-bold text-center mb-8">Latest Posts</h1>

<ul class="space-y-6 max-w-3xl mx-auto">
  {posts.map(post => (
    <li class="border-b pb-4">
      <a href={`/blog/${post.slug}/`} class="text-xl font-semibold text-blue-600 hover:underline">
        {post.data.title}
      </a>
      {post.data.description && <p class="text-gray-500 text-sm">{post.data.description}</p>}
      {post.data.pubDate && <p class="text-gray-400 text-xs">{post.data.pubDate.toDateString()}</p>}
    </li>
  ))}
</ul>
